@{
    ViewData["Title"] = Model.Title;
}

@model EditTaskViewModel

<h3>Edit task</h3>
<form asp-action="UpdateTask" asp-controller="Tasks"
    class="d-flex flex-column justify-content-center w-50 mx-auto border rounded p-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea type="text" required asp-for="Description" placeholder="Task description..." rows="15"
            class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateDeadline">Deadline</label>
        <input type="date" min=@DateTime.Now.ToString("yyyy-MM-dd") asp-for="DateDeadline" class="form-control"
            placeholder="Date deadline..." />
        <span asp-validation-for="DateDeadline" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-secondary">Save changes</button>
</form>

<partial name="_AlertPartial" model="@Model.Alert" />