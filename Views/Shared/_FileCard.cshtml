@model File

@inject IStorageSizeManager StorageSizeManager

<tr class="text-center">
    <td><a href="@Model.Url">@Model.Name</a></td>
    <td>@Model.DateCreated.ToString(@"dd.MM.yyyy, h:mm tt")</td>
    <td>@(StorageSizeManager.ConvertUnits(Model.Size))</td>
    <td class="d-flex flex-row justify-content-around align-items-center mb-3 p-1">

        <form asp-action="DownloadFile" asp-route-fileId=@Model.Id asp-route-isPrivate=@(Model.UserId != null)
            method="POST" class="text-center">
            <button type="submit" class="btn btn-primary"><i class="fas fa-download"></i></button>
        </form>

        @if (Model.UserId == null || Model.UserId == Context.GetCurrentUserId())
        {
            <form asp-action="DeleteFile" asp-route-fileId=@Model.Id asp-route-directoryId=@Model.DirectoryId
                asp-route-isPrivate=@(Model.UserId != null) method="POST" class="text-center ml-1">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
            </form>
        }
    </td>
</tr>