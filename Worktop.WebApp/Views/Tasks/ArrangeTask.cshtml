@{
    ViewData["Title"] = Model.Title;
}

@model Worktop.WebApp.ViewModels.EditTaskViewModel

<h3>New task</h3>
<form asp-action="ArrangeTask" asp-controller="Tasks"
    class="d-flex flex-column justify-content-center w-50 mx-auto border rounded p-3">
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea type="text" asp-for="Description" required placeholder="Task description..." rows="15"
            class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateDeadline">Deadline</label>
        <input type="date" min=@DateTime.Now.ToString("yyyy-MM-dd") value=@DateTime.Now.ToString("yyyy-MM-dd")
            asp-for="DateDeadline" placeholder="Date deadline..." class="form-control" />
        <span asp-validation-for="DateDeadline" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Arrange task</button>
</form>