@{
    const string MessageCardWidth = "55vw";
}

@model MessageCardViewModel

@if (Model.Message.SenderId != Context.GetCurrentUserId())
{
    <div class="card border-dark mb-3 mx-auto" style="width: @MessageCardWidth;">
        <div class="card-header">@Model.Message.SenderName</div>
        <div class="card-body text-dark">
            <p class="card-text">@Model.Message.Text</p>
            <span class="text-info">@Model.Message.DateSent.ToString(@"dd.MM.yyyy, h:mm tt")</span>
        </div>
    </div>
}
else
{
    <div class="card border-info mb-3 mx-auto" style="width: @MessageCardWidth;">
        <div class="card-header">@Model.Message.SenderName</div>
        <div class="card-body text-dark">
            <p class="card-text">@Model.Message.Text</p>
            <span class="text-info">@Model.Message.DateSent.ToString(@"dd.MM.yyyy, h:mm tt")</span>
        </div>
    </div>
}