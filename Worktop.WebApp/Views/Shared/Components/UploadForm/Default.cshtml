@model Worktop.WebApp.ViewModels.Components.UploadFormViewModel

<form asp-action="UploadFiles" asp-controller="Storage" enctype="multipart/form-data"
    class="d-flex flex-row justify-content-end align-items-center">
    <input type="hidden" asp-for=@Model.DirectoryId />
    <input type="hidden" asp-for=@Model.IsPrivate />
    <div class="custom-file mr-3 align-self-center">
        <input asp-for=@Model.Files type="file" class="custom-file-input" id="fileInput" multiple />
        <label for="fileInput" class="custom-file-label text-truncate">Choose file...</label>
        <span class="text-danger" asp-validation-for=@Model.Files></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i></button>
</form>