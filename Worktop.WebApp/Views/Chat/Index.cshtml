@{
    ViewData["Title"] = Model.Title;
}

@model Worktop.WebApp.ViewModels.ChatViewModel

<h3 class="mb-3">Chat hub</h3>
<div class="d-flex flex-row justify-content-center">
    <div class="jumbotron col-sm-6 m-3">
        <h1 class="display-4">Global chat</h1>
        <p class="lead">Simple global chat which allows you texting with all workers in one place!</p>
        <hr class="my-4">
        <p class="lead text-center">
            <a class="btn btn-info btn-lg" asp-action="Global" role="button">Join</a>
        </p>
    </div>
    <div class="jumbotron col-sm-6 m-3">
        <h1 class="display-4">Chat rooms</h1>
        <p class="lead">Create chat room and text with your team in one place!</p>
        <hr class="my-4">
        <p class="lead text-center">
            <a class="btn btn-info btn-lg" asp-action="Rooms" role="button">Chat rooms</a>
        </p>
    </div>
</div>